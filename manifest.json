{
    "name": "BookTab",
    "description": "Quickly search and navigate through bookmarks, bookmark folders, and tabs with one hand.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "128": "public/icon128.png"
    },
    "host_permissions": ["http://*/*", "https://*/*"],
    "permissions": [
        "tabGroups",
        "scripting",
        "bookmarks",
        "tabs",
        "commands",
        "activeTab",
        "search",
        "storage"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            }
        }
    }
}
